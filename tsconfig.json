{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@utils/*": ["utils/*"],
      "@features": ["features/index.ts"]
    },
    "baseUrl": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
